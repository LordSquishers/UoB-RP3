upperSurfaceField {
    type            surfaceFieldValue;
    libs            ("libfieldFunctionObjects.so");

    writeControl    writeTime;
    writeFields     true;

    surfaceFormat   raw;
    regionType      patch;
    name            upperSurface;

    operation       none;

    fields
    (
        p
        yPlus
        wallShearStress
    );
}

